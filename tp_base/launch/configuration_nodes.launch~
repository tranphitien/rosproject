<?xml version="1.0"?>
<launch>
	
	<!-- Run Gmapping node-->
	<include file="$(find tp_base)/launch/gmapping.launch"/>
	
	<!-- Run amcl node-->
	<!--include file = "$(find amcl)/examples/amcl_diff.launch" /-->
 	<include file="$(find tp_base)/launch/amcl.launch"/>
 	
 	<!-- Run the move_base node-->
	<node pkg = "move_base" type = "move_base" respawn = "false" name = "move_base" output = "screen">
		<rosparam file="$(find tp_base)/launch/info/costmap_common_params.yaml" command="load" ns="global_costmap" />
		<rosparam file="$(find tp_base)/launch/info/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find tp_base)/launch/info/global_costmap_params.yaml" command="load" /> <!--param="global_costMap"-->
		<rosparam file="$(find tp_base)/launch/info/local_costmap_params.yaml" command="load" />	<!--param="local_costMap"-->
		<rosparam file="$(find tp_base)/launch/info/base_local_planner_params.yaml" command="load" />	<!--param ="local_planner"-->
	</node>
	
	<!--Run Kinect and depthimage_to_laserscan node-->
	<include file="$(find tp_base)/launch/sensor_source.launch"/>
	
	<!-- Run the serial server_ odometry node-->
	<include file = "$(find tp_serial)/launch/tp_serial.launch" />
	
	<!-- Run the sensor transforms node-->
	<node pkg = "tp_base" type = "robot_tf_publisher" name = "robot_tf_publisher" output = "screen">
		<param name = "tilt_angle" value = "0.0" type = "double" />
		<param name = "camera_height" value = "0.5" type = "double" />
	</node>
	
</launch>
